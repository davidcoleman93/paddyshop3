<% if !flash[:notice].blank? %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
<% end %>

<h1>Login</h1>
<div>
	<%= form_tag sessions_path do %>
	<table>
	    <tr>
		<td><%= label_tag(:email) %></td>
		<td><%= text_field_tag(:email) %></td>
	    </tr>
	    <tr>
		<td><%= label_tag(:password) %></td>
		<td><%= password_field_tag(:password) %></td>
	    </tr>
	    <tr>
		<td>&nbsp</td>
		<td><%= submit_tag("Log In") %></td>
	    </tr
	</table>
	<% end %>
</div>
